#!/bin/env bash

dotdrop -c {{@@ _dotdrop_rootpath @@}}/config-user-1.yaml compare
dotdrop -c {{@@ _dotdrop_rootpath @@}}/config-user-1.yaml install $1

dotdrop -c {{@@ _dotdrop_rootpath @@}}/config-user-2.yaml compare
dotdrop -c {{@@ _dotdrop_rootpath @@}}/config-user-2.yaml install $1

prompt=$(sudo -nv 2>&1)
if [ $? -eq 0 ]; then
  sudo dotdrop -c {{@@ _dotdrop_rootpath @@}}/config-root.yaml compare
  sudo dotdrop -c {{@@ _dotdrop_rootpath @@}}/config-root.yaml install $1
else
  echo "Sudo disabled, skipping root config."
fi
