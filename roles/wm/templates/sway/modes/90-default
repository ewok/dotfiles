### Key bindings
#
# Basics:
#
set $post_hook "pkill -RTMIN+3 waybar"

## Action // Refresh keylayout icon ##
$bindsym $mod+space exec "pkill -RTMIN+3 waybar"

## Launch // Terminal ##
$bindsym $mod+Return exec $term, exec $post_hook

## Launch // Editor ##
$bindsym $mod_a+Return exec $editor, exec $post_hook

## Action // Kill focused window ##
$bindsym $mod+Shift+q kill

## Launch // Launcher ##
$bindsym $mod+d exec $menu, exec $post_hook

## Launch // Clipboard ##
$bindsym $mod+Shift+p exec $clipboard

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

## Action // Reload Sway Configuration ##
$bindsym $mod+Shift+c reload

## Action // Refresh Displays ##
$bindsym $mod+Shift+r reload, exec "sleep 3;systemctl --user restart kanshi.service"

## Action // Toggle Waybar ##    
# --locked flags allow the buttons to be used whilst the screen is locked.

#$bindsym $mod+Shift+b exec pkill -SIGUSR1 waybar

$bindsym --locked XF86AudioRaiseVolume exec $volume_up

$bindsym --locked XF86AudioLowerVolume exec $volume_down

$bindsym --release --no-repeat --locked XF86AudioMute exec $volume_mute

$bindsym --release --no-repeat XF86AudioMicMute exec $mic_mute

$bindsym --locked XF86MonBrightnessUp exec $brightness_up

$bindsym --locked XF86MonBrightnessDown exec $brightness_down

$bindsym --locked XF86AudioPlay exec playerctl play-pause

$bindsym XF86AudioNext exec playerctl next

$bindsym XF86AudioPrev exec playerctl previous

$bindsym XF86Search exec $menu

$bindsym XF86PowerOff exec $shutdown

$bindsym XF86TouchpadToggle input type:touchpad events toggle enabled disabled

# Moving around:
#
# Move your focus around
## Navigation // Move focus // $mod + ↑ ↓ ← → ##
$bindsym $mod+$left focus left, exec $post_hook
$bindsym $mod+$down focus down, exec $post_hook
$bindsym $mod+$up focus up, exec $post_hook
$bindsym $mod+$right focus right, exec $post_hook

## Navigation // Move focused window // $mod + Shift + ↑ ↓ ← → ##
$bindsym $mod+Shift+$left move left
$bindsym $mod+Shift+$down move down
$bindsym $mod+Shift+$up move up
$bindsym $mod+Shift+$right move right

#
# Workspaces:
#
## Navigation // Switch workspace // $mod + [number] ##
$bindsym $mod+1 workspace $ws1, exec $post_hook
$bindsym $mod+2 workspace $ws2, exec $post_hook
$bindsym $mod+3 workspace $ws3, exec $post_hook
$bindsym $mod+4 workspace $ws4, exec $post_hook
$bindsym $mod+5 workspace $ws5, exec $post_hook
$bindsym $mod+6 workspace $ws6, exec $post_hook
$bindsym $mod+7 workspace $ws7, exec $post_hook
$bindsym $mod+8 workspace $ws8, exec $post_hook
$bindsym $mod+9 workspace $ws9, exec $post_hook

set $focus_ws [ $focus_after_move == 'true' ] && swaymsg workspace

## Action // Move focused window to workspace // $mod + Shift + [number] ##
$bindsym $mod+Shift+1 move container to workspace $ws1, exec $focus_ws $ws1, exec $post_hook
$bindsym $mod+Shift+2 move container to workspace $ws2, exec $focus_ws $ws2, exec $post_hook
$bindsym $mod+Shift+3 move container to workspace $ws3, exec $focus_ws $ws3, exec $post_hook
$bindsym $mod+Shift+4 move container to workspace $ws4, exec $focus_ws $ws4, exec $post_hook
$bindsym $mod+Shift+5 move container to workspace $ws5, exec $focus_ws $ws5, exec $post_hook
$bindsym $mod+Shift+6 move container to workspace $ws6, exec $focus_ws $ws6, exec $post_hook
$bindsym $mod+Shift+7 move container to workspace $ws7, exec $focus_ws $ws7, exec $post_hook
$bindsym $mod+Shift+8 move container to workspace $ws8, exec $focus_ws $ws8, exec $post_hook
$bindsym $mod+Shift+9 move container to workspace $ws9, exec $focus_ws $ws9, exec $post_hook

$bindsym $mod+n workspace next, exec $post_hook
$bindsym $mod+b workspace prev, exec $post_hook

#navigate workspaces next / previous
$bindsym $mod+Shift+b move workspace to output left, exec $post_hook
$bindsym $mod+$mod_a+n move workspace to output down, exec $post_hook
$bindsym $mod+$mod_a+b move workspace to output up, exec $post_hook
$bindsym $mod+Shift+n move workspace to output right, exec $post_hook

$bindsym $mod_a+Up output eDP-1 transform 180
$bindsym $mod_a+Down output eDP-1 transform 0
$bindsym $mod_a+Left output eDP-1 transform 270
$bindsym $mod_a+Right output eDP-1 transform 90

#
# Layout stuff:
#

set $mode_win p(a)rent,(e)split,(f)loating,re(n)ame,(p)in,(r)esize,(s)tacking,(t)abbed,space-toggle
$bindsym  $mod+w mode "$mode_win"
mode "$mode_win" {

{% for mod in [ "","$mod+" ] %}
        ## Navigation // Swap focus to the parent window ##
        $bindsym {{mod}}a focus parent, mode "default"

        ## Action // Toggle layout split ##
        $bindsym {{mod}}e layout toggle split, mode "default"

        ## Action // Toggle floating ##
        $bindsym {{mod}}f floating toggle, mode "default"

        ## Action // Rename workspace ##
        $bindsym {{mod}}n exec sway-input -F 'rename workspace to "%s"' -P 'New name: ', mode "default"

        ## Action // Toggle stickness ##
        $bindsym {{mod}}p sticky toggle, exec notify-send -t 2000 'sticky', mode "default"

        ## Action // Switch to window stacking ##
        $bindsym {{mod}}s layout stacking, mode "default"

        ## Action // Switch to window tabbing ##
        $bindsym {{mod}}t layout tabbed, mode "default"

        ## Navigation // Toggle focus between tiling and floating ##
        $bindsym {{mod}}space focus mode_toggle, mode "default"

        ## Action // Call resizing mode ##
        $bindsym {{mod}}r mode $mode_resize

{% endfor %}

        # exit resize mode: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Ctrl+m mode "default"
}

## Action // Toggle window splitting ##
$bindsym $mod+q splitt

## Action // Toggle fullscreen ##
$bindsym $mod+f fullscreen

## Action // Toggle global fullscreen ##
$bindsym $mod+Shift+f fullscreen global

## Launch // Add-todo
$bindsym Shift+space exec $add-todo

## Launch // Restore notification
$bindsym $mod_a+n exec $restore-notification

default_border pixel 3
default_floating_border pixel

hide_edge_borders smart

focus_follows_mouse yes

popup_during_fullscreen leave_fullscreen

workspace_auto_back_and_forth no