#!/usr/bin/env bash

{% if ansible_distribution == "MacOSX" %}
DATE=gdate
{% else %}
DATE=date
{% endif %}

h 2022 bal \
  ^exp not:tag:clopen \
  --pretty-tables \
  --sort -ATM "$@"

echo

h bal -ATM \
  ^exp not:tag:clopen \
  --pretty-tables \
  --sort \
  -b 2023-01 \
  -e "$($DATE +%Y-%m --date="next month")" "$@"
