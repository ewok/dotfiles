#!/usr/bin/env bash

echo "********************************************************************************"
echo Goals:
h \
  bal \
  --pretty-tables \
  -e $(date +%Y-%m --date="next month") \
  ^assets:goals $@
echo

echo "********************************************************************************"
echo Assets:
h \
  bal \
  --pretty-tables \
  -e $(date +%Y-%m --date="next month") \
  ^assets:asset $@
echo
