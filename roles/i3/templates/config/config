# exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec_always --no-startup-id caffeine start
exec_always --no-startup-id pgrep xkb-switch || xkb-switch --i3
exec_always --no-startup-id keyb 1
exec_always --no-startup-id pgrep flameshot || flameshot
exec_always --no-startup-id /usr/libexec/gsd-xsettings
exec_always --no-startup-id nitrogen --random --set-zoom-fill
exec_always --no-startup-id {{ folders.bin }}/set-touchpad-natural
exec_always --no-startup-id pgrep solaar || solaar -w hide
exec_always --no-startup-id xss-lock -- {{ folders.bin }}/i3exit lock
exec_always --no-startup-id xautolock -time 10 -locker "{{ folders.bin }}/i3exit lock"
exec_always --no-startup-id pkill dunst; dunst
exec_always --no-startup-id pgrep parcellite || parcellite

include ~/.config/i3/autostart.d/*.conf
