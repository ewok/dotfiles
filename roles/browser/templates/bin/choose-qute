#!/bin/env bash

CMD=$(echo "Default|Work" | {{ folders.bin }}/rofi_run -dmenu -i -l 20 -p "Qutebrowser session:" -sep "|")

case $CMD in
    Default)
        if [[ -z "$1" ]]; then
            {{ folders.bin }}/qutebrowser
        else
            {{ folders.bin }}/qutebrowser --target tab-bg-silent "$1"
        fi
        ;;
    Work)
        if [[ -z "$1" ]]; then
            SESSION_NAME=work {{ folders.bin }}/qutebrowser -r work
        else
            SESSION_NAME=work {{ folders.bin }}/qutebrowser -r work --target tab-bg-silent "$1"
        fi
        ;;
esac
